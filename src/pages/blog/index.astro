---
import Nav from "@components/Nav.astro";
import { ArrowLeft } from "@lucide/astro";
import HeaderMobile from "src/components/molecules/HeaderMobile.astro";
import Post from "src/components/Post.astro";
import Layout from "src/layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
---

<Layout nav={false} customBackground={true} pdBottom={false}>
  <HeaderMobile hidden={false} />
  <Nav />
  <section class="blog">
    <h1>Blog</h1>
    <p>
      Aqui escribo mis pensamientos, reflexiones y experiencias sobre diversos
      temas.
    </p>
    <hr class="" />
    <div class="posts">
      {
        posts.map((post) => (
          <Post
            title={post.data.title}
            description={post.data.description || "DescripciÃ³n por defecto."}
            tags={post.data.tags || []}
            link={`/blog/${post.id}`}
          />
        ))
      }
    </div>

    <div class="blog__button-container">
      <a href="/" class="blog__back-btn">
        <ArrowLeft size={16} />
        Volver a inicio
      </a>
    </div>
  </section>
</Layout>

<style>
  .blog {
    padding-top: 96px;
  }
  .posts {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .blog__button-container {
    display: flex;
    justify-content: center;
    padding: 2rem 0;
  }

  .blog__back-btn {
    background-color: var(--background-dark);
    border: 1px solid var(--border);
    color: var(--text-grey);
    padding: 12px 24px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: inherit;
    min-width: 180px;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
  }

  .blog__back-btn:hover {
    background-color: var(--bg-dark-box);
    border-color: var(--text-grey-dark);
    color: var(--text-white);
    transform: translateY(-2px);
  }

  .blog__back-btn:active {
    transform: translateY(0);
  }
</style>
