---
import SocialMedia from "../components/SocialMedia.astro";
---

<section id="inicio" class="presentation-container">
  <div class="logo">
    <div class="logo__container">
      <img class="logo__img" src="/images/logo.png" alt="" />
    </div>
  </div>
  <div class="presentation">
    <h1>DESARROLLO SOLUCIONES QUE ESCALAN</h1>
    <h3 class="title-3">Fullstack Developer</h3>
    <p class="paragraph">
      Apasionado por el codigo y el aprendizaje autodidacta.<br />
      Creo soluciones web centradas en el usuario, aportando valor con innovaci√≥n
      y trabajo en equipo.
    </p>
    <a class="primary-button" href="#proyectos" id="projects-btn">
      VER PROYECTOS
    </a>
    <SocialMedia />
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const $projectsBtn = document.getElementById("projects-btn");

    $projectsBtn?.addEventListener("click", (e) => {
      e.preventDefault();
      const targetId = $projectsBtn?.getAttribute("href");
      if (targetId) {
        const targetElement = document.querySelector(targetId);
        if (targetElement) {
          targetElement.scrollIntoView({ behavior: "smooth" });
        }
      }
    });
  });
</script>

<style>
  .presentation-container {
    height: 100vh;
    overflow: auto;
  }
  .presentation {
    padding-top: 6rem;
  }

  .logo {
    background-color: var(--background-dark);
    position: fixed;
    padding: 1rem;
    width: 100%;
    border-bottom: 1px solid #333333;
    margin-bottom: 2rem;
  }
  .logo__container {
    width: 48px;
    height: 48px;
  }
  .logo__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .buttons-container {
    padding-top: 1rem;
    margin: auto;
    display: flex;
    justify-content: center;
    gap: 1rem;
    width: 300px;
  }
  .button {
    vertical-align: middle;
    flex: 1;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
  }

  .projects-btn {
  }

  .logo__container {
    width: 2.5rem;
    height: 2.5rem;
    user-select: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 600px) {
    .logo {
      display: none;
    }
    .presentation-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
  @media (min-width: 1080px) {
    h1 {
      font-size: 6rem;
    }
  }
</style>
