---
import { Home, FolderCode, Brain, MailPlus } from "@lucide/astro";

const navItems = [
  { path: "#inicio", label: "Inicio", icon: Home },
  { path: "#proyectos", label: "Proyectos", icon: FolderCode },
  { path: "#skills", label: "Skills", icon: Brain },
  { path: "#contacto", label: "Contacto", icon: MailPlus },
];
---

<nav>
  <div class="nav-container">
    <div class="nav__logo-container">
      <div class="nav__img-container">
        <img class="nav__logo-img" src="/images/logo.png" alt="" />
      </div>
      <p class="nav__username">joseverdev</p>
    </div>

    <ul class="navlist">
      {
        navItems.map((item) => {
          const Icon = item.icon;
          return (
            <li class={item.path === "/" ? "indexPath" : ""}>
              <a
                href={item.path}
                class={item.path === "/" ? "item indexPath" : "item"}
              >
                <div class="navlist__icon">{Icon && <Icon size={18} />}</div>
                <span class="navlist__label">{item.label}</span>
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
</nav>

<script defer>
  const $navLinks = document.querySelectorAll('.navlist a[href^="#"]');

  $navLinks.forEach((link) => {
    link.addEventListener("click", function (e) {
      e.preventDefault();

      const targetId = this.getAttribute("href");
      const targetElement = document.querySelector(targetId);

      if (targetElement) {
        targetElement.scrollIntoView({
          behavior: "smooth",
        });
      }
    });
  });
</script>

<style>
  .nav__logo-container {
    display: none;
  }
  .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-weight: 100;
  }

  .navlist {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    height: 100%;
    width: 100%;
    list-style: none;
    position: relative;
    color: #888888;
  }
  .logo {
    width: 56px;
    height: 40px;
    position: absolute;
    cursor: pointer;
    left: 0;
  }
  .logo img {
    width: 100%;
    height: 100%;
  }

  nav {
    background-color: var(--background-dark);
    border-top: 1px solid var(--border);
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    height: 48px;
    z-index: 1000;
  }
  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
  }
  .nav__logo-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .nav__username {
    display: none;
  }
  .navlist__label {
    user-select: none;
  }
  ul {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
  }
  li {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  a {
    font-size: 14px;
    font-weight: 700;
    position: relative;
  }
  a::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--orange);
    transition: width 0.3s ease;
  }
  a:hover::after {
    width: 100%;
  }

  @media (min-width: 600px) {
    nav {
      top: 0;
      right: 0;
      left: 0;
      width: 100%;
      height: fit-content;
      border-bottom: 1px solid var(--border);
      z-index: 1000;
    }
    .nav-container {
      display: flex;
      gap: 4rem;
      padding: 1rem 2rem;
    }
    .nav__img-container {
      display: flex;
      align-items: center;
      width: 40px;
      height: 40px;
      height: 100%;
    }
    .nav__logo-img {
      object-fit: scale-down;
    }
    .navlist {
      justify-content: space-evenly;
      height: 48px;
    }
    .navlist__label {
      font-size: 1rem;
      color: var(--text-grey);
      font-family: "JetBrains Mono", monospace;
    }
    .navlist__icon {
      display: none;
    }
    .nav__logo-container {
      width: 48px;
      display: block;
    }
  }

  @media (min-width: 1080px) {
    .nav__logo-container {
      align-items: center;
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    .nav__img-container {
      width: 40px;
      height: 40px;
      flex-shrink: 0;
    }
    .nav-container {
      align-items: center;
      padding: 0.5rem 2rem;
      justify-content: space-between;
    }
    .navlist {
      justify-content: flex-end;
      gap: 4rem;
    }
    .nav__username {
      display: block;
      font-family: "JetBrains Mono", monospace;
      text-transform: uppercase;
      font-weight: bold;
      font-size: 1.5rem;
    }
  }
</style>
