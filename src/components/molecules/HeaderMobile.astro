<div class="logo">
  <div class="logo__container">
    <img class="logo__img" src="/images/logo.png" alt="" />
  </div>
  <a href="/" class="logo__username">JOSEVERDEV</a>
</div>
<style>
  .logo {
    background-color: var(--background-dark);
    position: fixed;
    padding: 0.5rem 1rem;
    width: 100%;
    border-bottom: 1px solid #333333;
    margin-bottom: 2rem;
    z-index: 999;
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  .logo__container {
    width: 38px;
    height: 38px;
  }
  .logo__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .logo__username {
    color: inherit;
    text-decoration: none;
    font-weight: bold;
  }

  .logo__username:hover {
    opacity: 0.8;
  }

  @media (min-width: 600px) {
    .logo {
      display: none;
    }
  }
</style>
