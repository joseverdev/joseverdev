---
import Post from "src/components/Post.astro";
import { ArrowRight } from "@lucide/astro";
---

<section id="blog" class="blog">
  <h2 class="title-2">Blog</h2>
  <p class="paragraph">
    Comparto experiencias, tips,y tengo una serie de artículos sobre algoritmos
    utilizando JavaScript.
  </p>
  <div class="posts">
    <Post />
  </div>

  <div class="blog__button-container">
    <a href="/blog" class="blog__view-all-btn">
      
      Ver todos los artículos
      <ArrowRight size={16} />
    </a>
  </div>
</section>

<style>
  .posts {
    margin: auto;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
  }

  .blog__button-container {
    display: flex;
    justify-content: center;
    padding: 2rem 0;
  }

  .blog__view-all-btn {
    background-color: var(--background-dark);
    border: 1px solid var(--border);
    color: var(--text-grey);
    padding: 12px 24px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: inherit;
    min-width: 180px;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-align: center;
  }

  .blog__view-all-btn:hover {
    background-color: var(--bg-dark-box);
    border-color: var(--text-grey-dark);
    color: var(--text-white);
    transform: translateY(-2px);
  }

  .blog__view-all-btn:active {
    transform: translateY(0);
  }
</style>
